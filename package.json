{
    "name": "configuration-file-releaser",
    "version": "0.0.1",
    "description": "A Github action for releasing a new version using configuration files from your project",
    "author": "Thiago do N. Ferreira",
    "license": "MIT",
    "main": "src/main.js",
    "scripts": {
        "dev": "nodemon --ignore dist/ --exec npm run all",
        "lint": "eslint .",
        "prepare": "ncc build src/main.js -o dist --source-map --license licenses.txt",
        "test": "jest ./test --coverage",
        "all": "npm run lint && npm run test && npm run prepare"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thiagodonferreira/configuration-file-releaser.git"
    },
    "keywords": [
        "GitHub",
        "Actions",
        "JavaScript"
    ],
    "engines": {
        "node": ">=16.14.0"
    },
    "bugs": {
        "url": "https://github.com/thiagodonferreira/configuration-file-releaser/issues"
    },
    "homepage": "https://github.com/thiagodonferreira/configuration-file-releaser#readme",
    "dependencies": {
        "@actions/core": "1.8.2"
    },
    "devDependencies": {
        "@vercel/ncc": "0.33.4",
        "eslint": "8.15.0",
        "jest": "28.1.0",
        "nodemon": "2.0.16"
    }
}
